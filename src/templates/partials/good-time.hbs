<script>
    function goodTime(ms) {
        const date = new Date(ms - new Date().getTimezoneOffset()/60);
        const time = date.toLocaleTimeString('en-US', {hour: 'numeric', minute: '2-digit'});
        const day = date.toLocaleDateString('en-US');

        return `${day} ${time}`;
    }
</script>
